class Solution:
    def strongPasswordCheckerII(self, password: str) -> bool:
        if len(password)<8:return False
        else:
            l=False
            u=False
            d=False
            s=False
            c=True
            p=[" "]
            for k in password:
                if not l:
                    if k.islower():l=not l
                if not u:
                    if k.isupper():u=not u
                if not d:
                    if k.isdigit():d=not d
                if not s:
                    if k in "!@#$%^&*()-+":s=not s
                if  c:
                    if  p[-1]==k:
                        c= not c
                    p.append(k)
        print(l,u,d,s,c)
        if l and u and d and s and c:return True
        return False
                
